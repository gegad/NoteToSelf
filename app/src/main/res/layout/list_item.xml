<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewImportantItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_warning_black_24" />

    <ImageView
        android:id="@+id/imageViewTodoItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/imageViewImportantItem"
        android:layout_toRightOf="@id/imageViewImportantItem"
        android:layout_toEndOf="@id/imageViewImportantItem"
        app:srcCompat="@drawable/baseline_check_box_outline_blank_black_24" />

    <ImageView
        android:id="@+id/imageViewIdeaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/imageViewImportantItem"
        android:layout_toRightOf="@id/imageViewTodoItem"
        android:layout_toEndOf="@id/imageViewTodoItem"
        app:srcCompat="@drawable/baseline_wb_incandescent_black_24" />

    <TextView
        android:id="@+id/textTitleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewImportantItem"
        android:text="TextView"
        android:layout_marginTop="1dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/textDescriptionItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitleItem"
        android:text="TextView" />

</RelativeLayout>